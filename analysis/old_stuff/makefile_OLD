CC=gcc
CXX=g++
OPT=-O3
CFLAGS=$(OPT)
CPPFLAGS=$(OPT) -std=c++11 -fopenmp `root-config --cflags`
CPPLFLAGS=-fopenmp -lgsl -lgslcblas `root-config --libs`

all: chisq_spectrum_fit block_spectrum_map block_lifetime_fit

debug: OPT=-g
debug: all

chisq_spectrum_fit: xorshift.o chisq_spectrum_fit.o
	$(CXX) -o chisq_spectrum_fit chisq_spectrum_fit.o xorshift.o $(CPPLFLAGS)

chisq_spectrum_fit.o: chisq_spectrum_fit.cpp
	$(CXX) $(CPPFLAGS) -c -o chisq_spectrum_fit.o chisq_spectrum_fit.cpp

block_spectrum_map: xorshift.o block_spectrum_map.o
	$(CXX) -o block_spectrum_map block_spectrum_map.o xorshift.o $(CPPLFLAGS)

block_spectrum_map.o: block_spectrum_map.cpp
	$(CXX) $(CPPFLAGS) -c -o block_spectrum_map.o block_spectrum_map.cpp

block_lifetime_fit: xorshift.o block_lifetime_fit.o
	$(CXX) -o block_lifetime_fit block_lifetime_fit.o xorshift.o $(CPPLFLAGS)
	
block_lifetime_fit.o: block_lifetime_fit.cpp
	$(CXX) $(CPPFLAGS) -c -o block_lifetime_fit.o block_lifetime_fit.cpp

xorshift.o: xorshift.c xorshift.h
	$(CC) $(CFLAGS) -c -o xorshift.o xorshift.c

clean:
	rm -rf xorshift.o chisq_spectrum_fit.o chisq_spectrum_fit block_spectrum_map.o block_spectrum_map block_lifetime_fit.o block_lifetime_fit
